
@model PagedList.IPagedList<Model.EF.Product>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}
@section header{
    Danh sách sản phẩm
}
<div class="card-body">
    @using (Html.BeginForm("Index", "Product", FormMethod.Get))
    {
        <div class="row form-group">
            <div class="col-md-4">
                <input type="text" id="search" name="searchString" class="form-control" />
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary">Tìm kiếm</button>
            </div>
        </div>
    }
    <div class="table-responsive">
        <table class="table table-bordered" id="" cellspacing="0">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Tên sản phẩm</th>
                    <th>Mã sản phẩm</th>
                    <th>Tiêu đề</th>
                    <th>Mô tả</th>
                    <th><div style="width:225px;" class="text-center">Hình ảnh</div></th>
                    <th>Đơn giá</th>
                    <th>Giá khuyến mãi</th>
                    <th>Số lượng</th>
                    <th>Loại</th>
                    <th>Chi tiết</th>
                    <th>Ngày tạo</th>
                    <th>Người tạo</th>
                    <th>Ngày sửa đổi</th>
                    <th>Tình trạng</th>
                    <th>TopHot</th>
                    <th>Số lượt xem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a href="/Admin/Product/Edit/@item.ID">Sửa</a>
                            <a href="/Admin/Product/Delete/@item.ID">Xóa</a>
                        </td>
                        <td>@item.Name</td>
                        <td>@item.Code</td>
                        <td>@item.MetaTitle</td>
                        <td>@item.Description</td>
                        <td><div class="text-center" style="width:225px;height:225px"><img src="~/Assets/Client/img/@item.Code/@item.Avatar" class="text-center" width="100%" height="100%" /></div></td>
                        <td>@item.Price</td>
                        <td>@item.PromotionPrice</td>
                        <td>@item.Quantily</td>
                        <td>@item.CategoryID</td>
                        <td>@item.Detail</td>
                        <td>@item.CreatedDate</td>
                        <td>@item.CreatedBy</td>
                        <td>@item.ModifiedDate</td>
                        <td><a href="#" class="ajax-status-product alert text-success ajax-status-product" data-id="@item.ID">@(item.Status ? "Còn hàng" : "Hết hàng")</a></td>
                        <td>@item.TopHot</td>
                        <td>@item.ViewCount</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>#</th>
                    <th>Tên sản phẩm</th>
                    <th>Mã sản phẩm</th>
                    <th>Tiêu đề</th>
                    <th>Mô tả</th>
                    <th>Hình ảnh</th>
                    <th>Đơn giá</th>
                    <th>Giá khuyến mãi</th>
                    <th>Số lượng</th>
                    <th>Loại</th>
                    <th>Chi tiết</th>
                    <th>Ngày tạo</th>
                    <th>Người tạo</th>
                    <th>Ngày sửa đổi</th>
                    <th>Tình trạng</th>
                    <th>Bán chạy</th>
                    <th>Số lượt xem</th>
                </tr>
            </tfoot>
        </table>
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @class = "btn btn-primary" }))
    </div>
</div>

