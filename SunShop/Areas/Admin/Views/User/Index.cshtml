
@model PagedList.IPagedList<Model.EF.tblUser>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}
@section header{
   Danh sách tài khoản  
}
<div class="card-body">
    @using (Html.BeginForm("Index", "User", FormMethod.Get))
    {
        <div class="row form-group">
            <div class="col-md-4">
                <input type="text" id="search" name="searchString" class="form-control" />
            </div>
            <div class="col-md-4">
                <button type="submit"  class="btn btn-primary">Tìm kiếm</button>
            </div>
        </div>
    }
    
    <div class="table-responsive">
        <table class="table table-bordered" id="" cellspacing="0">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Tên tài khoản</th>
                    <th>Mật khẩu</th>
                    <th>Họ và tên</th>
                    <th>Địa chỉ</th>
                    <th>Số điện thoại</th>
                    <th>Ghi chú</th>
                    <th>Vai trò</th>
                    <th>Trạng thái</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                <tr>
                    <td>
                        <a href="/Admin/User/Edit/@item.id">Sửa</a>
                        <a href="/Admin/User/Delete/@item.id">Xóa</a>
                    </td>
                    <td>@item.UserName</td>
                    <td>@item.Password</td>
                    <td>@item.Name</td>
                    <td>@item.Address</td>
                    <td>@item.Phone</td>
                    <td>@item.MetaDesciptions</td>
                    <td>@((item.Mod=="0")?"Khách hàng":(item.Mod=="1")?"Quản lý cửa hàng":"Quản trị viên")</td>
                    <td><a href="#" class="btn-active" data-id="@item.id">@(item.Status?"Kích hoạt":"Khóa")</a></td>
                </tr>
                }
            </tbody>
        </table>
        @Html.PagedListPager(Model,page => Url.Action("Index",new { page,@class="btn btn-primary" }))
    </div>
</div>


